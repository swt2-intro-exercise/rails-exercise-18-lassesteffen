<table id="authors">
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
      <td><%= link_to author.name, author_path(author) %></td>
      <td><%= link_to author.homepage, "https://#{author.homepage}" %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Delete', author_path(author), method: :delete %></td>
    </tr>
  <% end %>
</table><br>

<%= link_to 'Create new author', new_author_path %><br>
<%= link_to 'Back', root_path %>

